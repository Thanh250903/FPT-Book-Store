@model List<Book>
<partial name="_Notification" />

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center ">
            @foreach (var Book in Model)
            {
                <form>
                    <div class="card" style="width: 16rem;">
                        <img class="card-img-top" src="@Book.ImageUrl" alt="@Book.Title" width="600px" height="400px" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@Book.Title</h5>
                            <p class="card-text" style="text-overflow: ellipsis;overflow: hidden;-webkit-line-clamp: 3;-webkit-box-orient: vertical; display: -webkit-box;">@Book.Description</p>
                            <p class ="card-text">@Book.Category.Name</p>
                            <p class="card-text">@Book.Price VND</p>
                            <a class="btn btn-primary" asp-controller="Book" asp-action="Detail"asp-route-id="@Book.Id" >Details</a>
                            <a asp-controller="Book" asp-action="CreateUpdate" asp-route-id="@Book.Id" class="btn btn-primary">Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@Book.Id" class="btn btn-primary">Delete</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</section>
<footer>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</footer>
<div>
    <a class="btn btn-primary me-md-2 position-relative top-0 bottom-0" asp-action="CreateUpdate">Create</a>
</div>
<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
<script src="js/scripts.js"></script>
