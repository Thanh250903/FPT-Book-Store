@model List<ASM1670.Models.Book>
<partial name="_Notification" />
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center ">
            @foreach (var Book in Model)
            {
                <div class="card me-2" style="width: 30rem;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img class="img-fluid rounded-start" src="@Book.ImageUrl" alt="@Book.Title" />
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Book.Title</h5>
                                    <p class="card-text" style="text-overflow: ellipsis;overflow: hidden;-webkit-line-clamp: 3;-webkit-box-orient: vertical; display: -webkit-box;">@Book.Description</p>
                                <a class="btn btn-primary" asp-controller="Book" asp-action="Detail" asp-route-id="@Book.Id">Details</a>
                                <a asp-area="User" asp-controller="Cart" asp-action="addcart" asp-route-id="@Book.Id"
                                   class="btn btn-secondary btn-sm float-right">Đặt hàng</a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>
</section>
