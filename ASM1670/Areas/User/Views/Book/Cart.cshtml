@model List<ASM1670.Models.CartItem>

<h2>Cart</h2>

@if (Model.Count > 0) {
  double total = 0;
  int stt = 1;
  
  <table class="table">
    <tr style="text-align:center">
      <th>#</th>
      <th></th>
      <th>Book</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th></th>
    </tr>
    @foreach (var cartitem in Model)
    {
        double thanhtien = cartitem.Quantity * cartitem.book.Price;
        total += thanhtien;

        <tr>
           <td>@(stt++)</td>
                <td><img src="@cartitem.book.ImageUrl" style="width:30%;" /></td>
           <td>@cartitem.book.Title</td>
           <td>@(cartitem.book.Price.ToString("n0")).000VND</td>
           <td style="text-align:center">@cartitem.Quantity</td>
           <td>@(thanhtien.ToString("n0")).000VND</td>
                <td>
               <a asp-controller="Book" asp-action="RemoveCart" asp-route-id="@cartitem.book.Id"
                class="btn btn-danger">Delete</a>
           </td>
        </tr>
    }
      <tr>
          <td colspan="5" class="text-right">Total</td>
          <td>@(total.ToString("n0")).000VND</td>
          <td></td>
      </tr>
  </table>

  <a asp-controller="Book" asp-action="Checkout" class="btn btn-success">Checkout</a>

      @section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
      }

}
else {
  <p class="alert alert-danger">Giỏ hàng trống</p>
}